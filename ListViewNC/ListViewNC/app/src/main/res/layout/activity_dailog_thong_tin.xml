<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Đi vào một giấc ngủ nhanh chóng với 7 bước sau đây."
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip : 5 phút đọc"
            android:textSize="14dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/img_background"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/infor1"/>
        <ScrollView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pharagraph"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_width="280dp"
                android:layout_height="550dp"
                android:text="1. Hạ nhiệt độ phòng \n\n 2. Sử dụng phương pháp thở 4-7-8 \n\n 3. Lên lịch đi ngủ \n\n 4. Hấp thụ ánh sáng cả ban ngày và ban đêm
                    \n\n 5. Tập yoga, thiền \n\n 6. Tránh nhìn vào đồng hồ \n\n 7. Tránh ngủ vặt trong ngày"/>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>